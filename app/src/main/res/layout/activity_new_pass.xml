<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPass">


    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textColor="#3A3A3A"
        android:textSize="24dp"
        android:translationX="35dp"
        android:translationY="70dp"/>
    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter new password"
        android:textColor="#A7A7A7"
        android:textSize="14dp"
        android:translationX="35dp"
        android:translationY="110dp"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:translationX="35dp"
        android:textColor="#A7A7A7"
        android:translationY="200dp"/>

    <EditText
        android:id="@+id/editTextTextPassword3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pole"
        android:ems="10"
        android:hint=" **********"

        android:inputType="textPassword"
        android:textSize="16dp"
        android:translationX="35dp"
        android:translationY="230dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:translationX="35dp"
        android:textColor="#A7A7A7"
        android:translationY="300dp"/>
    <EditText
        android:id="@+id/editTextTextPassword4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pole"
        android:ems="10"
        android:hint=" **********"

        android:inputType="textPassword"
        android:textSize="16dp"
        android:translationX="35dp"
        android:translationY="330dp" />

    <Button
        android:id="@+id/NextBtn"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#A7A7A7"
        android:translationX="30dp"
        android:translationY="440dp"
        android:textStyle="bold"
        android:text="Log in"
        app:cornerRadius="4dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/eye"
        android:translationX="340dp"
        android:translationY="245dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/eye"
        android:translationX="340dp"
        android:translationY="345dp" />

</androidx.constraintlayout.widget.ConstraintLayout>