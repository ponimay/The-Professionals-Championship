<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tracking">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/track"
        android:translationX="0dp"
        android:translationY="70dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Real-time Tracking"
        android:textColor="#0560FA"
        android:gravity="center"
        android:textSize="24dp"
        android:textStyle="bold"

        android:translationX="105dp"
        android:translationY="450dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#3A3A3A"
        android:textSize="16dp"
        android:text="Track your packages/items from the\n comfort of your home till final destination"
        android:translationX="55dp"
        android:translationY="500dp"/>

    <Button
        android:id="@+id/NextBtn"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#0560FA"
        android:translationX="30dp"
        android:translationY="630dp"

        android:textStyle="bold"
        android:text="Sign Up"
        app:cornerRadius="4dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="#A7A7A7"
        android:textSize="14dp"
        android:translationX="110dp"
        android:translationY="700dp"/>

    <TextView
        android:id="@+id/Sign"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textColor="#0560FA"
        android:textSize="14dp"
        android:textStyle="bold"
        android:translationX="270dp"
        android:translationY="700dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>